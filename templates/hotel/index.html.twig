{% extends 'Back/base.html.twig' %}


{% block title %}Jointure{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <center>
        <h1 class="titreadmin"> Hotels </h1>
    </center>

    <div class="example-wrapper">

    <table>







        {%for b in hotels %}
            <tr>

                <div class="card">
                    <div class="container">
                        <h4 class="jointure" id="left"><b> {{("Nom de l'hotel:")}} <centre>{{b.nom}} </centre> </b></h4>
                        <p  id="left">    {{ ("Pays de l'hotel :")}} <centre>{{b.pays}}      </centre>     </p>
                        <p  id="left">    {{ ("Id de Hotel:")}} <centre>{{b.id}}  </centre>       </p>


                        <p  class='del' id="left">
                            <centre>
                                <a href="{{ path('hoteldel',{'id':b.id}) }}"> Supprimer</a>
                            </centre>
                        </p>

                        <p  class='modifier' id="left">
                            <centre>
                                <a href="{{ path('edithotel',{'id':b.id}) }}"> Modifier</a>
                            </centre>
                        </p>
                    </div>
                </div>

            </tr
            >
        {% endfor %}


    </table>
{% endblock %}