{% extends 'Back/base.html.twig' %}

{% block title %}Liste des airlines{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <center>
        <h1 class="titreadmin"> Liste des airlines </h1>
    </center>

    <div class="example-wrapper">

    <table>



        {%for b in airlines%}
            <tr>

                <div class="card">
                    <div class="container">
                        <h4 class="jointure" id="left"><b> {{("Nom de airline:")}} <centre>{{b.nomairline}} </centre> </b></h4>
                        <p  id="left">    {{ ("Pays de airline :")}} <centre>{{b.pays}}      </centre>     </p>
                        <p  id="left">    {{ ("Id de Airline:")}} <centre>{{b.id}}  </centre>       </p>
                        <p  id="left">    {{ ("Stars:")}} <centre>{{b.stars}}  </centre>       </p>

                        <p  class='del' id="left">
                            <centre>
                            <a href="{{ path('airlinedel',{'id':b.id}) }}"> Supprimer</a>
                            </centre>
                        </p>


                        <p  class='modifier' id="left">
                            <centre>
                               <a href="{{ path('editairline',{'id':b.id}) }}"> Modifier</a>
                            </centre>
                        </p>






                    </div>
                </div>














            </tr>
        {% endfor %}


    </table>
{% endblock %}